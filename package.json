{
    "name": "eventify-eda",
    "version": "1.2.0",
    "description": "Eventify - Event-Driven Architecture Example",
    "author": "Lucas Vilas Boas",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "libs/*",
        "services/*"
    ],
    "scripts": {
        "start:order-service": "cd services/eventify-order-service && nest start",
        "start:quality-service": "cd services/eventify-quality-service && nest start",
        "start:all": "npm run start:order-service && npm run start:quality-service",
        "release": "standard-version && git push --follow-tags origin main",
        "release:lib": "cd libs/kafka && npm run release"
    },
    "devDependencies": {
        "standard-version": "^9.5.0"
    }
}
